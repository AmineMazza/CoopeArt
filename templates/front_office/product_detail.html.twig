                      {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
<body class="animsition">

	<!-- Page Product Détail -->

		<div class="container">
			<div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">
				<button class="how-pos3 hov3 trans-04 js-hide-modal1">
					<img src="/assets/FrontOffice/images/icons/icon-close.png" alt="CLOSE">
				</button>

				<div class="row">
					<div class="col-md-6 col-lg-7 p-b-30">
						<div class="p-l-25 p-r-30 p-lr-0-lg">
							<div class="wrap-slick3 flex-sb flex-w">
								<div class="wrap-slick3-dots"></div>
								<div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

								<div class="slick3 gallery-lb">
									<div class="item-slick3" data-thumb="/uploads/{{product.image}}">
										<div class="wrap-pic-w pos-relative">
											{# <img src="/assets/FrontOffice/images/artisanat/chkara.jpg" alt="IMG-PRODUCT"> #}
                                            <img src="/uploads/{{product.image}}" alt="Banner">


											<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/uploads/{{product.image}}">
												<i class="fa fa-expand"></i>
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					
					<div class="col-md-6 col-lg-5 p-b-30">
						<div class="p-r-50 p-t-5 p-lr-0-lg">
							<h4 class="mtext-105 cl2 js-name-detail p-b-14">
								 {{product.title}}
							</h4>

							<span class="mtext-106 cl2">
								 {{product.price}} DH
							</span>

							<p class="stext-102 cl3 p-t-23">
								 {{product.description}}
							</p>
							
							<!--  form -->
							<div class="col-md-12 order-md-1">
							<h4 class="mb-3" style="color:#0d6efd; margin-left:120px;margin-bottom:20px;">Checkout</h4>
							<form class="needs-validation" novalidate>
								<div class="row">
								<div class="col-md-6 mb-3">
									<label for="Prenom">Prénom</label>
									<input type="text" class="form-control" id="Prenom" placeholder="Prénom" value="" required>
									<div class="invalid-feedback">
									Valid first name is required.
									</div>
								</div>
								<div class="col-md-6 mb-3">
									<label for="Nom">Nom</label>
									<input type="text" class="form-control" id="Nom" placeholder="Nom" value="" required>
									<div class="invalid-feedback">
									Valid last name is required.
									</div>
								</div>
								</div>

								<div class="mb-3">
								<label for="Telephone">Telephone</label>
								<div class="input-group">
									<input type="text" class="form-control" id="Telephone" placeholder="06 93 39 54 78" required>
									<div class="invalid-feedback" style="width: 100%;">
									Your Telephone is required.
									</div>
								</div>
								</div>

								<div class="mb-3">
								<label for="email">Email</label>
								<input type="email" class="form-control" id="email" placeholder="you@gmail.com">
								<div class="invalid-feedback">
									Please enter a valid email address for shipping updates.
								</div>
								</div>

								<div class="mb-3">
								<label for="address">Votre Adresse </label>
								<input type="text" class="form-control" id="address" placeholder="872 hay hasani" required>
								<div class="invalid-feedback">
									Please enter your shipping address.
								</div>
								</div>

								<div class="row">
								<div class="col-md-5 mb-3">
									<label for="Ville">Votre Ville</label>
									<select class="custom-select d-block w-100" id="Ville" required>
									            <option value="">Choose...</option>
									            <option value="#">Marrakech</option>
												<option value="#">Casablanca</option>
												<option value="#">Mohammedia</option>
												<option value="#">Rabat</option>
												<option value="#">salé</option>
												<option value="#">Fes</option>
												<option value="#">Meknes</option>
												<option value="#">Oujda</option>
												<option value="#">Tanja</option>
												<option value="#">Tetouan</option>
												<option value="#">Agadir</option>
												<option value="#">Safi</option>
									</select>
									<div class="invalid-feedback">
									Please select a valid Ville.
									</div>
								</div>
								</div>

								<hr class="mb-4">
								<button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
							</form>
							</div>
						</div>
					<!--  form  -->
						</div>
					</div>
				</div>
			</div>
		</div>
	<!-- /Page Product Détail -->

